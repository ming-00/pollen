<%= form_with(model: @forumpost, local: true) do |f| %>
    <section>
    <br>
    <div class = "futura-this" %>
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: "entry-title-field", style: 'width: 30%' %>
        <br>
    </div>
    <div class = "entry-text-field" %>
        <%= f.text_area :content, placeholder: "Start typing..."%>
    </div>
    <div>
    <%= f.label :tag_list, "Select tag(s)", :style => "font-family: 'Futura Std';" %> 
    <table class="table-style">
    <tr>
        <%= f.collection_check_boxes(:tag_list, valid_tags, :first, :first) do |b| %>
            <td>
            <div class="form-check">
                <label> 
                    <span class="tag-name">
                        <%= b.check_box class: 'form1-check-input', :style => "float:left; margin-right: 0.5em; font-family: 'Futura Std';" %>
                        <div class="forum-tag-label"><%= b.value %></span>
                    </span>  
                </label>
            </div>
            </td>
        <% end %>
    </tr>
    </table>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>